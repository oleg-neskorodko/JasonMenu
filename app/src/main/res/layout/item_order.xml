<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameOrderItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myGreen1"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/descriptionOrderItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:paddingRight="5dp"
                android:src="@drawable/scales01" />

            <TextView
                android:id="@+id/weightOrderItemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:paddingRight="5dp"
                android:src="@drawable/clock01" />

            <TextView
                android:id="@+id/timeOrderItemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:paddingRight="5dp"
                android:src="@drawable/money01" />

            <TextView
                android:id="@+id/priceOrderItemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp" />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:paddingHorizontal="10dp"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/plusOrderItemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="+"/>

        <TextView
            android:id="@+id/amountOrderItemTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="0"/>

        <Button
            android:id="@+id/minusOrderItemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="-"/>

    </LinearLayout>

</LinearLayout>